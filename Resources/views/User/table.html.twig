{# Dywee\AddressBundle\Resources\View\User\table.html.twig #}

{%  extends "DyweeAddressBundle::userAdmin.html.twig" %}

{% block metaTitle %}
    Liste des adresses {{ parent() }}
{% endblock %}

{% block body %}

    <a href="{{ path('dywee_address_user_add') }}" class="btn btn-success action-right"><i class="fa fa-plus"></i> Ajouter</a>

    <div class="title-heading">
        <h1 class="text-center">Liste des adresses</h1>
    </div>

    {% if addressList|length > 0 %}
        <table class="table table-striped table-hover table-condensed">
            <thead>
            <tr>
                <th>#</th>
                <th>Prénom Nom</th>
                <th>Rue</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {%  for address in addressList %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ address.firstName }} {{ address.lastName }}</td>
                    <td>{{ address.address1 }}</td>
                    <td>{{ address.zip }} - {{ address.cityString }}</td>
                    <td>{{ address.country.name}}</td>
                    <td>{{ address.mobile }}</td>
                    <td> <a href="{{ path('dywee_address_user_view', {id: address.id}) }}" class="link-unstyled" target="_blank"><i class="fa fa-eye"></i> </a>
                            <a href="{{ path('dywee_address_user_update', {id: address.id}) }}" class="link-unstyled"><i class="fa fa-pencil"></i> </a>
                            <a href="{{ path('dywee_address_user_delete', {id: address.id}) }}" class="link-unstyled"><i class="fa fa-trash-o"></i> </a>
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Vous n'avez pas encore renseigné d'adresse</p>
        <p><a href="{{ path('dywee_address_user_add') }}" class="btn btn-success"><i class="fa fa-plus"></i> Ajouter une adresse</a></p>
    {% endif %}

{% endblock %}