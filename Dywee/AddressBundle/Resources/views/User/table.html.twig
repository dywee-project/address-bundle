{# Dywee\AddressBundle\Resources\View\User\table.html.twig #}

{%  extends "DyweeAddressBundle::layout.html.twig" %}

{% block title %}
    Liste des adresses {{ parent() }}
{% endblock %}

{% block bodyContent %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success"> {{ flashMessage }} </div>
    {% endfor %}

    <a href="{{ path('dywee_address_user_add') }}" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Ajouter</a>

    <div class="title-heading">
        <h1 class="text-center">Liste des adresses</h1>
    </div>
    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>#</th>
            <th>Prénom Nom</th>
            <th>Rue</th>
            <th>Ville</th>
            <th>Pays</th>
            <th>Téléphone</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for address in addressList %}
            <tr>
                <td><small>{{ loop.index }}</small></td>
                <td><small>{{ address.firstName }} {{ address.lastName }}</small></td>
                <td><small>{{ address.address1 }}</small></td>
                <td><small>{{ address.zip }} - {{ address.cityString }}</small></td>
                <td><small>{{ address.country.name}}</small></td>
                <td><small>{{ address.mobile }}</small></td>
                <td><small> <a href="{{ path('dywee_address_user_view', {id: address.id}) }}" class="link-unstyled" target="_blank"><i class="fa fa-eye"></i> </a>
                        <a href="{{ path('dywee_address_user_update', {id: address.id}) }}" class="link-unstyled"><i class="fa fa-pencil"></i> </a>
                        <a href="{{ path('dywee_address_user_delete', {id: address.id}) }}" class="link-unstyled"><i class="fa fa-trash-o"></i> </a>
                    </small>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}